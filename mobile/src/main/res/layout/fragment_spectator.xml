<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:keepScreenOn="true"
    android:gravity="center_vertical"
    >

    <TextView
        android:text="@string/deadball"
        android:textSize="@dimen/play_clock_spectator_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPlayClock"
        android:padding="@dimen/play_clock_spectator_padding"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/game_clock_spectator_padding"
        >
        <TextView
            android:layout_toLeftOf="@+id/txtSemicolon"
            android:layout_centerVertical="true"
            android:text="@string/minutes"
            android:textSize="@dimen/game_clock_spectator_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtGameClockMinutes"
            />
        <TextView
            android:layout_centerInParent="true"
            android:text="@string/time_separator"
            android:textSize="@dimen/game_clock_spectator_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSemicolon"
            />

        <TextView
            android:layout_toRightOf="@+id/txtSemicolon"
            android:layout_centerVertical="true"
            android:text="@string/seconds"
            android:textSize="@dimen/game_clock_spectator_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtGameClockSeconds"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtGameClockMinutes"
            android:layout_marginTop="@dimen/game_clock_spectator_label_margin"
            android:text="@string/stop"
            android:textSize="@dimen/game_clock_spectator_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblStop"
            />
    </RelativeLayout>



</LinearLayout>